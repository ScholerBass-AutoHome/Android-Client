<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="com.autohome.autohomeclient.RoomActivity">

	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar"/>

	<it.neokree.materialtabs.MaterialTabHost
		android:id="@+id/room_tabHost"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@+id/toolbar"
		app:textColor="#FFFFFF"
		app:materialTabsPrimaryColor="@color/primary"
		app:primaryColor="@color/primary"
		app:accentColor="@color/accent" />

	<android.support.v4.view.ViewPager
		android:id="@+id/room_pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/room_tabHost" />

</RelativeLayout>
