<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autohome.autohomeclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".RoomListing"
            android:label="@string/title_activity_rooms" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_room" >
        </activity>
        <activity
            android:name=".GroupCreator"
            android:label="@string/title_activity_group_creator" >
        </activity>
        <activity
            android:name=".ScheduleListing"
            android:label="@string/title_activity_schedule_listing" >
        </activity>
        <activity
            android:name=".UnitListing"
            android:label="@string/title_activity_unit_listing" >
        </activity>
    </application>

</manifest>
